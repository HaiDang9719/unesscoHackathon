<%layout('./partials/layout')%>
<body class="bg-menu">
    <form class="form-post" method="POST" action ="/service/api/post/createPost" id="vue-form">
        <h1 class="brand" style="color:black;">Klimage</h1>
        <h4>Create new post</h4>
        <label for="title" style="color:black;">For forum</label>
        <input type="text" id="forum_id" name="forumList" class="form-control" readonly>

        <label for="title" style="color:black;">Title</label>
        <input type="text" id="tilte" name="tilte" class="form-control" required autofocus>

        <label for="content" style="color:black;">Content</label>
        <textarea id="content" name="description" class="form-control"> </textarea>

        <label for="category" style="color:black;">Category</label>
        <input type="text" id="categoryText" name="category" class="form-control" readonly >
        <div class="form-row">
            <div class="col-md-8">
                <select name="addCategory" id="addCategory" class="form-control" style="color:black;">
                    <option v-for="category in categories" v-bind:value="category">{{category}}</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-black btn-block" style="color:black;" v-on:click="addtotext">Add category</button>
            </div>
        </div>

        <label for="author" style="color:black;">Author</label>
        <input type="text" id="author" name="author" class="form-control" required>

        <button class="btn btn-lg btn-block btn-black" style="color:black;">Submit</button>

        <footer class="container py-5">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="#">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                  </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                  </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                  </span>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; Klima Kage 2018</p>
                </div>
            </div>
            </div>
        </footer>
    </form>
    <script type="text/javascript" src="/js/lib/nicEdit.js"></script>
    <script>
        var area;
        bkLib.onDomLoaded(function() {
            // var area2 = new nicEditor({fullPanel : true}).panelInstance('myArea2');
            addTextArea();
        });
        function addTextArea(){
            area = new nicEditor({fullPanel : true}).panelInstance('content');
        }
    </script>
    <script src="/js/components/formControl.js"></script>
